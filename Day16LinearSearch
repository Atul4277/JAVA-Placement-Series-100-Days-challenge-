package com.java100daychallege.java7daychallege;

public class Day16LinearSearch {
	
	public static void main(String[] args) {
		
		int arr[] = {6,3,8,4,7};
		
		int item = 9;
		
		int itemNotFound = 0;
		
		for(int i =0;i<arr.length;i++) {
			
			if(arr[i] == item) {
				System.out.println("item is found at "+i+" index position");
				itemNotFound = itemNotFound + 1;
			}
		}
		
		if(itemNotFound == 0) {
			System.out.println("item is not found");
		}
	}

}
